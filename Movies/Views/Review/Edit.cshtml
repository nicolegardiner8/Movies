<link href="@Url.Content("~/Content/MyStyles.css")" rel=" stylesheet" type="text/css" />
@model Movies.Models.Review

<h2>Edit</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">

        <div class="form-group">
            @*Movie Name*@
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-5" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required"}})

            </div>
        </div>

        <div class="form-group">
            @*Star rating drop down*@
            @Html.LabelFor(model => model.StarRating, htmlAttributes: new { @class = "control-label col-sm-5" })
            <div class="col-sm-7">
                @Html.DropDownListFor(m => m.StarRating,
                    new SelectList(Enum.GetValues(typeof(Movies.Models.StarRating))),
                    "Select Star Rating", new { @class = "form-control", required = "required" })

            </div>
        </div>
        <div class="form-group">
            @*Recommend checkbox*@
            @Html.LabelFor(model => model.Recommend, htmlAttributes: new { @class = "control-label col-sm-5"})
            <div class="col-sm-7">
                @Html.CheckBoxFor(m => m.Recommend, new { @class = "control-label" })
            </div>
        </div>

        <div class="form-group">
            @*Comments text area*@
            @Html.LabelFor(m => m.Comments, htmlAttributes: new { @class = "control-label col-sm-5" })           
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new {@class="form-control", required = "required"}})
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Return to Reviews", "Reviews", "Review", new { @class = "homebutton" })
</div>


